<Window x:Class="ATON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ribbon="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:ATON" 
        mc:Ignorable="d"
        Title="ATON" Height="800" Width="1360">
    <Grid>
        <!--Specify Main Grid Layout-->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4.5*"/>
        </Grid.RowDefinitions>
        
        <!--Menu Ribbon-->
        <ribbon:Ribbon>
            <ribbon:RibbonTab Header="Home">
                <ribbon:RibbonGroup Header="Save">
                    <ribbon:RibbonButton Label="Save" SmallImageSource="./Resources/SaveImg.png" />
                    <ribbon:RibbonButton Label="Save All" SmallImageSource="./Resources/SaveImg.png"/>
                </ribbon:RibbonGroup>
                <ribbon:RibbonGroup Header="Insert">
                    <ribbon:RibbonButton Label="Add" SmallImageSource="./Resources/Add.png">
                    </ribbon:RibbonButton>
                    <ribbon:RibbonButton Label="Delete" SmallImageSource="./Resources/Delete.png"/>
                </ribbon:RibbonGroup>
                <ribbon:RibbonGroup Header="Options">
                    <ribbon:RibbonButton Label="Connect" SmallImageSource="./Resources/Connect.png"/>
                    <ribbon:RibbonButton Label="Python"  SmallImageSource="./Resources/Python.png"/>
                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>
        </ribbon:Ribbon>
        
        <!--Project Structure TBD-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!--Project Structure-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <!--Project Editor-->
                <Grid Grid.Column="0">
                    <!--To add objects used in project-->
                    <ListView ItemsSource="{Binding AtonObjects}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:Name="SingleLineDataTemplate" DataType="local:Recording">
                                <StackPanel Orientation="Horizontal" Height="auto">
                                    <DockPanel>
                                        <Image Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.Client.Name}"/>
                                        <Label Content="{Binding Name}"/>
                                    </DockPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
        <!--Editor View TBD-->
        
        
    </Grid>
</Window>
